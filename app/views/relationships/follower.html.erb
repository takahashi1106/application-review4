 <% if @followers.count > 0 %>
   <table class="table">
   　<thead>
     　<tr>
       　<th>Follow Users</th>
       　<th>name</th>
       　<th colspan="3"></th>
       </tr>
     </thead>
     <tbody>
     　<% @followers.each do |user| %>
     　<tr>
     　     <td><%=image_tag user.get_profile_image,size:"100×100"%></td>
           <td><%= user.name %></td>
           <td>フォロー数：<%= user.follower.count %></td>
           <td>フォロワー数：<%= user.followed.count %></td>
          <td><%= link_to "Show", user_path %></td>
       </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>Follow Users</h1>
  <p>ユーザーはいません</p>
<% end %>